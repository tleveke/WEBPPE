{% extends 'base.html.twig' %}

{% block title %}Rapport index{% endblock %}

{% block body %}
    <h1>Rapports du visiteur {{ nomvisiteur }}</h1>
    
    <br><br>
    <a href="{{ path('rapport_new') }}" class="btn btn-info" role="button">Nouveau produit</a>
    <br><br>

    {{ form_start(search) }}
    <div class='row'>
        <div class="col-sm-4">
            {{ form_row(search.date) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(search.choixTri) }}
        </div>
        <div class="col-sm-4">
            <button class="btn">{{ button_label|default('Rechercher') }}</button>
        </div>
    </div>
    {{ form_end(search) }}

    <table class="table">
        <thead>
            <tr>
                <th>Le numéro du rapport</th>
                <th>Date du rapport</th>
                <th>Motif du rapport</th>
                <th>Bilan du rapport</th>
                <th>Nom du medecin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rapport in rapports %}
            <tr>
                <td>N°{{ rapport.id }}</td>
                <td>{{ rapport.date ? rapport.date|date('Y-m-d') : '' }}</td>
                <td>{{ rapport.motif }}</td>
                <td>{{ rapport.bilan }}</td>
                <td>{{ rapport.idmedecin.prenom }} {{ rapport.idmedecin.nom }}</td>
                <td>
                    <a href="{{ path('rapport_show', {'id': rapport.id}) }}">Aperçu</a>
                    <br>
                    <a href="{{ path('rapport_edit', {'id': rapport.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
