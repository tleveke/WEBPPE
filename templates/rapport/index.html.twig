{% extends 'base.html.twig' %}

{% block title %}Rapport index{% endblock %}

{% block body %}

    <h1>Rapports du visiteur {{ nomvisiteur }}</h1>
    <h1>{{status}}</h1>
    
    <br><br>
    <a href="{{ path('rapport_new') }}" class="btn btn-info" role="button">Nouveau Rapport</a>
    <br><br>

    {{ form_start(search) }}
    <div class='row'>
        <div class="col-sm-3">
            {{ form_row(search.grandeur) }}
        </div>
        <div class="col-sm-3">
            {{ form_row(search.date) }}
        </div>
        <div class="col-sm-3">
            {{ form_row(search.choixTri) }}
        </div>
        <div class="col-sm-3">
            <button class="btn">{{ button_label|default('Rechercher') }}</button>
        </div>
    </div>
    {{ form_end(search) }}
    <a href="{{ path('index') }}" class="btn btn-success" role="button">Revenir</a>
    <input type="text" id="InputchoiseM" onkeyup="myFunction()" placeholder="choisi medecien"> 
       
    <table class="table" id="Table01">
        <thead>
            <tr>
                <th>Date du rapport</th>
                <th>Motif du rapport</th>
                <th>Bilan du rapport</th>
                <th>Nom du medecin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rapport in rapports %}
            <tr>
                <td>{{ rapport.date ? rapport.date|date('d-m-Y') : '' }}</td>
                <td>{{ rapport.motif }}</td>
                <td>{{ rapport.bilan }}</td>
                <td>{{ rapport.idmedecin.prenom }} {{ rapport.idmedecin.nom }}</td>
                <td>
                    <a href="{{ path('rapport_show', {'id': rapport.id}) }}">Aper√ßu</a>
                    <br>
                    <a href="{{ path('rapport_edit', {'id': rapport.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>
        function myFunction() {
          var input, filter, table, tr, td, i;
          input = document.getElementById("InputchoiseM");
          filter = input.value.toUpperCase();
          table = document.getElementById("Table01");
          tr = table.getElementsByTagName("tr");
          for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[4];
            if (td) {
              if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }       
          }
        }
        </script>

{% endblock %}
