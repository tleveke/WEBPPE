{% extends 'base.html.twig' %}

{% block title %}Rapport index{% endblock %}

{% block body %}

    <center><h1>Rapports de {{ app.user.nom }}</h1></center>
    
    <br><br>
    <a href="{{ path('rapport_new') }}" class="btn btn-primary btn-block" role="button">Créer un nouveau rapport</a>
    <br>

    {{ form_start(search) }}

    <center><h3>Trier les rapports de {{ app.user.nom }}</h3></center>
    <br>
    <center><a href="{{ path('rapport_index') }}" class="btn btn-info" role="button">Réinitialiser la recherche</a></center>
    <br><br>
    
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center><h3>Trier selon la date</h3></center>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(search.grandeur) }}
                            {{ form_row(search.date) }} 
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(search.choixTri) }}
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <center><button class="btn btn-success">{{ button_label|default('Rechercher') }}</button></center>
                </div>
            </div>
            {{ form_end(search) }}
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center><h3>Trier selon le nom du médecin</h3></center>
                </div>
                <div class="panel-body">
                    <center><input type="text" id="InputchoiseM" onkeyup="myFunction()" placeholder="Nom du médecin"></center>
                </div>
            </div>
        </div>
    </div>

    <br><br>
    
    <table class="table" id="Table01">
        <thead>
            <tr>
                <th>Date du rapport</th>
                <th>Motif du rapport</th>
                <th>Bilan du rapport</th>
                <th>Nom du medecin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rapport in rapports %}
            <tr>
                <td>{{ rapport.date ? rapport.date|date('d-m-Y') : '' }}</td>
                <td>{{ rapport.motif }}</td>
                <td>{{ rapport.bilan }}</td>
                <td>{{ rapport.idmedecin.prenom }} {{ rapport.idmedecin.nom }}</td>
                <td>
                    <div class="row">
                        <div class='col-sm-4'>
                            <a href="{{ path('rapport_show', {'id': rapport.id}) }}" class="btn btn-success" role="button">Aperçu</a>
                        </div>
                        <div class='col-sm-4'>
                            <a href="{{ path('rapport_edit', {'id': rapport.id}) }}" class="btn btn-info" role="button">Modifier</a>
                        </div>
                        <div class='col-sm-4'>
                            {{ include('rapport/_delete_form.html.twig') }}
                        </div>
                    </div>
                    <br>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>
        function myFunction() {
          var input, filter, table, tr, td, i;
          input = document.getElementById("InputchoiseM");
          filter = input.value.toUpperCase();
          table = document.getElementById("Table01");
          tr = table.getElementsByTagName("tr");
          for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[3];
            if (td) {
              if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }       
          }
        }
    </script>
{% endblock %}
