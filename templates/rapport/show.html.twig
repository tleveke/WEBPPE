{% extends 'base.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block body %}
    <h1>Rapport</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rapport.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ rapport.date ? rapport.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ rapport.motif }}</td>
            </tr>
            <tr>
                <th>Bilan</th>
                <td>{{ rapport.bilan }}</td>
            </tr>
            <tr>
                <th>Nom du médecin</th>
                <td>{{ rapport.idmedecin.prenom }} {{ rapport.idmedecin.nom }}</td>
            </tr>
            {% if echantillons|length > 0 %}
                </tbody>
                </table>
                <strong>Echantillon offerts pendant la visite : </strong><br><br>
                {% for echantillon in echantillons %}
                <div class="panel panel-warning"> 
                    <div class="panel-body">
                        <p>Le medicament {{echantillon.medicament.nomcommercial}}, la quantite donner est {{echantillon.quantite}}</p>
                    </div>
                </div>
                {% endfor %}
                <tbody>
                <table>
            {% else %}
                <tr>
                    <th>Echantillon</th>
                    <td colspan="5">Aucun echantillon a été offert</td>
                </tr>
            {% endif %}

            {# <tr>
                <th>Echantillon offert</th>
                <td>Medicament = {{ rapport.offrirs.medicament.nomcommercial }}, nb = {{rapport.offrirs.quantite}} </td>
            </tr> #}
        </tbody>
    </table>

    <br><br>

    <a href="{{ path('rapport_edit', {'id': rapport.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('rapport/_delete_form.html.twig') }}

    <br>

    <a href="{{ path('rapport_index') }}" class="btn btn-default" role="button" >Retourner à la liste</a>
{% endblock %}
